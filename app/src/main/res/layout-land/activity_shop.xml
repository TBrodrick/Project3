<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shop"
    tools:context=".shop">

    <TextView
        android:id="@+id/Transparency"
        android:layout_width="634dp"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        android:background="#99141414"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Item2Pic"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="108dp"
        android:contentDescription="@string/item2"
        app:layout_constraintStart_toEndOf="@+id/Item1Pic"
        app:layout_constraintTop_toBottomOf="@+id/Shop"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/Item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="@string/item"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Item1Pic"
        app:layout_constraintTop_toBottomOf="@+id/Item1Pic" />

    <Button
        android:id="@+id/Buy1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Buy"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/Item1Pic"
        app:layout_constraintTop_toBottomOf="@+id/Price1"
        tools:text="Buy" />

    <TextView
        android:id="@+id/Item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="@string/item"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Item2Pic"
        app:layout_constraintTop_toBottomOf="@+id/Item2Pic" />

    <TextView
        android:id="@+id/Price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/price"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Item3Pic"
        app:layout_constraintTop_toBottomOf="@+id/Item3" />

    <ImageView
        android:id="@+id/Item1Pic"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="108dp"
        android:contentDescription="@string/item1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Shop"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/Item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/item"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Item3Pic"
        app:layout_constraintTop_toBottomOf="@+id/Item3Pic" />

    <TextView
        android:id="@+id/Price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="@string/price"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Item1Pic"
        app:layout_constraintTop_toBottomOf="@+id/Item1" />

    <Button
        android:id="@+id/Buy3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Buy"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/Item3Pic"
        app:layout_constraintTop_toBottomOf="@+id/Price3"
        tools:text="Buy" />

    <TextView
        android:id="@+id/Price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="@string/price"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Item2Pic"
        app:layout_constraintTop_toBottomOf="@+id/Item2" />

    <ImageView
        android:id="@+id/Item3Pic"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="92dp"
        android:contentDescription="@string/item3"
        app:layout_constraintStart_toEndOf="@+id/Item2Pic"
        app:layout_constraintTop_toBottomOf="@+id/Shop"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/Buy2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Buy"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/Item2Pic"
        app:layout_constraintTop_toBottomOf="@+id/Price2"
        tools:text="Buy" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/player1"
        android:src="@drawable/robota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Buy1"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/player2"
        android:src="@drawable/robotb"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/Buy1"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/player3"
        android:src="@drawable/robotc"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/Buy1"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/player4"
        android:src="@drawable/robotd"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/Buy1"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/Shop"
        android:layout_width="84dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:text="@string/shop"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MoveOn"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:text="Move On"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Shop"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GoBack"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:text="Go Back"
        app:layout_constraintEnd_toStartOf="@+id/Shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Item3Pic"
        app:layout_constraintTop_toBottomOf="@+id/MoveOn" />


</androidx.constraintlayout.widget.ConstraintLayout>
